---
import sortBy from 'lodash/sortBy';
import Layout from '../layouts/Layout.astro';
import { ShopsPage } from '../templates/ShopsPage';
import { type Shop } from '../types/Shop';
import shopsRaw from '../data/shops.json';

const shops = sortBy(shopsRaw as Shop[], 'title');
---

<Layout
	url="/shops/"
	title="Shops"
	description="Our favorite shops and markets"
	component={ShopsPage}
	props={{ shops }}
/>
